@model IEnumerable<N.Treinamento.Application.ViewModels.OngViewModel>
@using GL.Treinamento.UI.Site.Helpers;

@{
    ViewBag.Title = "Listagem de ONG's";
}

<h2>Listagem de ONG's</h2>

<p>
    @Html.ActionLink("Cadastrar ONG", "Create", "Create", new { @class = "btn btn-primary" }).IfClaimHelper("PermissoesCliente", "CI")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeFantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFantasia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.OngId }, new { @class = "btn btn-warning" }).IfClaimHelper("PermissoesCliente", "CE")
                @Html.ActionLink("Excluir", "Delete", new { id = item.OngId }, new { @class = "btn btn-danger" }).IfClaimHelper("PermissoesCliente", "CX")
                @Html.ActionLink("Detalhes", "Details", new { id = item.OngId }, new { @class = "btn btn-info" }).IfClaimHelper("PermissoesCliente", "CD")
            </td>
        </tr>
    }

</table>
